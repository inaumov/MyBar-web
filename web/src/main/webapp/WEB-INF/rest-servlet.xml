<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-4.3.xsd
	   http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="mybar.web"/>
    <mvc:annotation-driven/>

    <bean id="corsFilter" class="mybar.web.filter.MyBarCORSFilter"/>

    <!-- To enable @RequestMapping process on type level and method level -->
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>

    <bean id="historyController" class="mybar.web.rest.rates.history.HistoryController"/>
    <bean id="ratesController" class="mybar.web.rest.rates.RatesController"/>
    <bean id="userController" class="mybar.web.rest.users.UserController"/>

    <bean id="cocktailsController" class="mybar.web.rest.bar.CocktailsController"/>
    <bean id="shelfController" class="mybar.web.rest.bar.ShelfController"/>
    <bean id="ingredientsController" class="mybar.web.rest.bar.IngredientsController"/>

    <!-- Configure to plugin JSON as request and response in method handler -->
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">
        <property name="messageConverters">
            <list>
                <ref bean="jsonMessageConverter"/>
            </list>
        </property>
    </bean>

    <!-- Configure bean to convert JSON to POJO and vice versa -->
    <bean id="jsonMessageConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="objectMapper" ref="jacksonObjectMapper"/>
    </bean>
    <!-- FactoryBean to create ObjectMapper -->
    <bean id="jacksonObjectMapper" class="org.springframework.http.converter.json.Jackson2ObjectMapperFactoryBean">
        <!-- by some convenient method -->
        <property name="failOnEmptyBeans" value="true"/>
    </bean>
</beans>