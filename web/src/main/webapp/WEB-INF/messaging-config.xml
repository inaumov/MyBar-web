<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="messageProducer" class="mybar.messaging.producer.KafkaMessageProducer">
        <constructor-arg name="topic" value="my-bar-rates-topic"/>
        <constructor-arg name="producerClientId" value="MyBarRatesProducer"/>
        <constructor-arg name="servers" value="localhost:9092"/>
    </bean>

    <bean id="messageConsumer" name="messageConsumer" class="mybar.messaging.consumer.KafkaMessageConsumer" init-method="runConsumer">
        <constructor-arg name="topic" value="my-bar-rates-topic"/>
        <constructor-arg name="consumerGroupId" value="MyBarRatesConsumer"/>
        <constructor-arg name="servers" value="localhost:9092"/>
        <constructor-arg name="pollTimeout" value="10000"/>
        <constructor-arg name="closeTimeout" value="10000"/>
    </bean>

</beans>